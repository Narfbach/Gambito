{
  "manifest_version": 3,
  "name": "Gambito Chess Connector",
  "version": "1.0",
  "description": "Connects Chess.com to Gambito Bot",
  "permissions": [],
  "host_permissions": [
    "https://www.chess.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
